version = 2
final_space = true
console_title_template = '{{ .Shell }} in {{ .Folder }}'

# g_ -> gruvbox
[palette]
g_blue = '#458588'
g_aqua = '#689D6A'
g_purple = '#B16286'
g_yellow = '#D79921'
g_green = '#98971A'
g_red = '#CC241D'
g_orange = '#D65D0E'
blue = 'blue'
magenta = 'magenta'

[[blocks]]
  type = 'prompt'
  alignment = 'left'
  newline = true

  [[blocks.segments]]
    type = 'text'
    style = 'plain'
    foreground = 'p:magenta'
    background = 'transparent'
    template = "<p:g_aqua>{{ .UserName }}</> <p:g_green>on</> <p:g_orange>{{ .HostName }}</>" 

  [[blocks.segments]]
    type = 'path'
    style = 'plain'
    background = 'transparent'
    foreground = 'p:g_blue'
    template = " {{ .Path }}"

    [blocks.segments.properties]
      style = 'full'

[[blocks]]
  type = 'prompt'
  alignment = 'left'
  newline = true

  [[blocks.segments]]
    type = 'text'
    style = 'plain'
    foreground = 'p:magenta'
    background = 'transparent'
    template = "" # template to be displayed on this segment

[transient_prompt]
newline = true
background = "transparent"
foreground = "#ffffff"
template = "{{ .Shell }}> "
